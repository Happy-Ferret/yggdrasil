{{> closePanel}}

<h2>{{{i18n "panel_note_title"}}}</h2>

<div class="tabs">
  <div class="tab selected" data-body="tab-note-info">{{{i18n "panel_note_tab_info"}}}</div>
  <div class="tab" data-body="tab-note-style">{{{i18n "panel_note_tab_style"}}}</div>
</div>

<div class="tab-body" id="tab-note-info">
  <id-shape class="js-shape" data-label="{{{i18n "panel_note_tab_info_shape"}}}"></id-shape>
  <id-range class="js-rounding" data-min="0" data-max="100" data-label="{{{i18n "panel_note_tab_info_rounding"}}}"></id-range>
  <id-textarea class="js-text" data-label="{{{i18n "panel_note_tab_info_text"}}}"></id-textarea>
</div>

<div class="tab-body" id="tab-note-style">
  <id-linestyle class="js-linestyle" data-none="true" data-label="{{{i18n "panel_note_tab_style_border"}}}"></id-linestyle>
  <id-range class="js-linewidth" data-min="1" data-max="10"></id-range>  
  <label>{{{i18n "panel_note_tab_style_colors"}}}</label>
  <div style="display: flex">
    <div style="display: flex; flex-direction: column; flex-wrap: wrap">
      <id-popup title="{{{i18n "panel_note_tab_style_colors_fill"}}}" class="colortype selected" data-type="fill">
        <svg class="icon"><use xlink:href="dist/icons.svg#note-fill"></use></svg>
      </id-popup>
      <id-popup title="{{{i18n "panel_note_tab_style_colors_border"}}}" class="colortype" data-type="border">
        <svg class="icon"><use xlink:href="dist/icons.svg#note-border"></use></svg>
      </id-popup>
      <id-popup title="{{{i18n "panel_note_tab_style_colors_text"}}}" class="colortype" data-type="text">
        <svg class="icon"><use xlink:href="dist/icons.svg#note-text"></use></svg>
      </id-popup>
    </div>
    <id-colorpicker class="js-color"></id-colorpicker>
  </div>
</div>